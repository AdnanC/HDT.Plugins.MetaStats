<Window
    x:Class="HDT.Plugins.MetaStats.Controls.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:HDT.Plugins.MetaStats.Controls"
  Title="MetaStats Settings" Width="371.025" SizeToContent="Height"
  WindowStyle="ToolWindow" AllowsTransparency="False" Background="Transparent" Height="150"
    Closing="Window_Closing" ResizeMode="NoResize">

    <Grid Background="#FF303030" Width="450" Height="100">
        <TextBox x:Name="tbUserKey" Height="23" TextWrapping="Wrap" Margin="0,10,143,0" Background="#FF8D8D8D" IsReadOnlyCaretVisible="True" IsReadOnly="True" HorizontalAlignment="Right" VerticalAlignment="Top" Width="236"/>
        <Label x:Name="label" Content="User Key" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Foreground="#FFC3C3C3" VerticalContentAlignment="Bottom"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Right" Margin="0,0,143,10" VerticalAlignment="Bottom" Width="75" Click="btnClose_Click"/>


    </Grid>

</Window>